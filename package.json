    "test": "buidler test --network ganache",
    "test:gas": "REPORT_GAS=true buidler test --network localhost",
    "coverage": "buidler coverage --network coverage",
    "abi:extract": "buidler-extract --output abi/ --keys abi"
  },
  "files": [
    "/abi",
    "/arapp.json",
    "/artifacts",
    "/contracts",
    "/test"
  ],
